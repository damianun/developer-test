@model OrangeBricks.Web.Controllers.Property.ViewModels.RequestViewingViewModel

@{
    ViewBag.Title = "Request Viewing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script>
        $(function () {
            $('#@Html.IdFor(m => m.VisitDateTime)').datetimepicker({
                format: 'd/m/Y H:i',
                inline: true,
                minDate:'+1970/01/02'
            });
        });
    </script>
}
<h2>Request Viewing</h2>

<p>When would you like to view the @Model.PropertyType on @Model.StreetName?</p>

@using (Html.BeginForm("RequestViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.VisitDateTime, "Select Date and Time", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Hidden("PropertyId", Model.PropertyId)
            @*Not using datetime-local HTML5 marker as not widely implemented yet. For consistency across browsers datetimepicker component is used*@
            @Html.TextBoxFor(m => m.VisitDateTime, new { @class = "form-control", @Value = Model.VisitDateTime.ToString("dd/MM/yyyy HH:mm")})
            @Html.ValidationMessageFor(m => m.VisitDateTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Request Viewing" />
        </div>
    </div>
}